<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="team3.swS.idSearch.main.IdSearchController">
   <center>
      <VBox prefHeight="200.0" prefWidth="340.0" spacing="20.0" style="-fx-background-color: white;" BorderPane.alignment="CENTER">
         <children>
            <Label text="ID 찾기">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Label text="이메일을 입력해 주세요." />
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="5.0">
               <children>
                  <TextField fx:id="idSearchTxF" onAction="#idSearchTxF" prefHeight="28.0" prefWidth="176.0" promptText="email">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextField>
                  <Button fx:id="idSearchBtn" mnemonicParsing="false" onAction="#idSearchBtn" text="확인">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnCancel" mnemonicParsing="false" onAction="#btnCancel" text="취소">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="30.0" right="10.0" top="40.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>

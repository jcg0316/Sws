<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="team3.swS.pwSearch.main.PwSearchController">
   <center>
      <VBox prefHeight="250.0" prefWidth="370.0" spacing="20.0" style="-fx-background-color: white;" BorderPane.alignment="CENTER">
         <children>
            <Label text="PW 찾기">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Label text="아이디와 이메일을 입력해 주세요." />
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <HBox prefHeight="51.0" prefWidth="310.0" spacing="10.0">
                     <children>
                        <TextField fx:id="txtFID" onAction="#txtFID" prefHeight="28.0" prefWidth="190.0" promptText="ID">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </TextField>
                     </children>
                  </HBox>
                  <HBox prefHeight="79.0" prefWidth="310.0" spacing="10.0">
                     <children>
                        <TextField fx:id="txtFPW" onAction="#txtFPW" prefHeight="28.0" prefWidth="190.0" promptText="E-MAIL">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </TextField>
                        <Button fx:id="btnSearch" mnemonicParsing="false" onAction="#btnSearch" text="확인">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Button>
                        <Button fx:id="btnCancel" mnemonicParsing="false" onAction="#btnCancel" text="취소">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="30.0" right="10.0" top="40.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
